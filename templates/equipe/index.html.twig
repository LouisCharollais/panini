{% extends 'base.html.twig' %}

{% block title %}Mes Equipes{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <h1 class="mt-5">Mes Equipes</h1>
        <table class="table table-bordered mt-3">
            <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for equipe in equipes %}
                <tr>
                    <td>{{ equipe.nom }}</td>
                    <td>
                        <a href="{{ path('equipe_show', {'id': equipe.id}) }}" class="btn btn-primary btn-sm">Voir</a>
                        <a href="{{ path('equipe_edit', {'id': equipe.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        <a href="{{ path('equipe_delete', {'id': equipe.id}) }}" class="btn btn-danger btn-sm">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2" class="text-center">Aucune équipe trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <style>
        /* Styles CSS personnalisés */
        .container {
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        .btn-sm {
            font-size: 12px;
        }

        .text-center {
            text-align: center;
        }
    </style>

{% endblock %}
