{% extends 'base.html.twig' %}

{% block title %}Mon équipe{% endblock %}

{% block body %}
    {{ parent() }}
    <style>
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            font-size: 24px;
            color: #333;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        li {
            margin-bottom: 10px;
        }

        a {
            text-decoration: none;
            color: #007bff;
        }
    </style>

    <div class="container">
        <h1>Mon équipe</h1>
        <table>
            <tr>
                <th>ID</th>
                <td>{{ equipe.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ equipe.nom }}</td>
            </tr>
            <tr>
                <th>Propriétaire</th>
                <td>{{ equipe.createur.nom }}</td>
            </tr>
            <tr>
                <th>Cartes</th>
                <td>
                    <ul>
                        {% for carte in equipe.paninis %}
                            <li><a href="{{ path('equipe_panini_show', { 'equipe_id': equipe.id, 'panini_id': carte.id }) }}">{{ carte.nom }}</a></li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </table>

        <br>
        <a href="{{ path('membre_show', {'membre_id' : membre.id}) }}" class="btn-primary btn-sm">Retour à la liste des équipes</a>
        <a href="{{ path('equipe_delete', {'equipe_id' : equipe.id, 'membre_id' : membre.id})}}" class="btn-sm">Supprimer</a>
    </div>

    <style>
        .btn-sm {
            font-size: 15px;
            padding: 5px 10px;
            border-radius: 3px;
            background-color: #999;
            color: #000;
            border: 5px solid #999;
            cursor: pointer;
            text-decoration: none;
        }

        .btn-sm:hover {
            background-color: #777;
            border-color: #777;
            color: #000;
            text-decoration: none;
        }
    </style>
{% endblock %}

