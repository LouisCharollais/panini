{% extends 'base.html.twig' %}

{% block title %}DÃ©tail du Panini{{ panini.nom }}{% endblock %}

{% block body %}
    <style>
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            font: 18px/1.5 sans-serif;
        }

        h1 {
            font-size: 24px;
            color: #333;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        a {
            text-decoration: none;
            color: #007bff;
        }
    </style>

    <div class="container">
        <h1>{{ panini.nom }}</h1>
        <table>
            <tr>
                <th>Album</th>
                <td><a href="{{ path('album_show', {'id': panini.album.id}) }}">{{ panini.album.nom }}</a></td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ panini.description }}</td>
            </tr>
        </table>
    </div>
{% endblock %}
