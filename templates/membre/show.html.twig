{% extends 'base.html.twig' %}

{% block title %}Membre{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
    <h1>{{ membre.prenom }}  {{ membre.nom }}</h1>
    <h2 class="mt-5">Liste des Albums</h2>

    <table class="table table-bordered mt-3">
        <thead>
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for album in membre.albums %}
            <tr>
                <td>{{album.nom}}</td>
                <td>
                    <a href="{{ path('album_show', {'album_id' : album.id, 'membre_id' : membre.id})}}" class="btn-sm">Voir</a>
                    <a href="{{ path('album_delete', {'album_id' : album.id, 'membre_id' : membre.id})}}" class="btn-sm">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('album_new', {'membre_id' : membre.id}) }}" class="btn-primary btn-green">Créer un album</a>
    </div>

    <div class="container">
        <h2 class="mt-5">Liste des Equipes</h2>

        <table class="table table-bordered mt-3">
            <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for equipe in membre.equipes %}
                <tr>
                    <td>{{equipe.nom}}</td>
                    <td>
                        <a href="{{ path('equipe_show', {'equipe_id' : equipe.id, 'membre_id' : membre.id})}}" class="btn-sm">Voir</a>
                        <a href="{{ path('equipe_delete', {'equipe_id' : equipe.id, 'membre_id' : membre.id})}}" class="btn-sm">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('membre_index') }}" class="btn-primary btn-sm">Retour vers la liste des membres</a>

        <a href="{{ path('equipe_new', {'membre_id' : membre.id}) }}" class="btn-primary btn-green">Créer une équipe</a>
    </div>

    <style>
        .container {
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
            font-weight: bold;
        }
        .btn-sm {
            font-size: 15px;
            padding: 5px 10px;
            border-radius: 3px;
            background-color: #999;
            color: #000;
            border: 5px solid #999;
            cursor: pointer;
            text-decoration: none;
        }

        .btn-sm:hover {
            background-color: #777;
            border-color: #777;
            color: #000;
            text-decoration: none;
        }

        .btn-green {
            font-size: 15px;
            padding: 5px 10px;
            border-radius: 3px;
            background-color: #28a745;
            color: #fff;
            border: 5px solid #28a745;
            cursor: pointer;
            text-decoration: none;
        }

        .btn-green:hover {
            background-color: #218838;
            border-color: #218838;
            color: #fff;
            text-decoration: none;
        }
    </style>

    {{ include('membre/_delete_form.html.twig') }}
{% endblock %}
